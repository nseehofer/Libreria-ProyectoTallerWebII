generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Categoria {
  id     Int     @id(map: "PK__Categori__3213E83FBAFA4878") @default(autoincrement())
  nombre String  @db.NVarChar(100)
  Libro  Libro[]
}

model Libro {
  id           Int       @id(map: "PK__Libro__3213E83F8B42C7D3") @default(autoincrement())
  nombre       String    @db.NVarChar(255)
  descripcion  String?   @db.NVarChar(Max)
  precio       Decimal   @db.Decimal(10, 2)
  autor        String    @db.NVarChar(255)
  id_categoria Int
  Categoria    Categoria @relation(fields: [id_categoria], references: [id], map: "fk_libro_categoria")
}

model Usuario {
  id         Int     @id(map: "PK__Usuario__3213E83F22B9F078") @default(autoincrement())
  email      String  @unique(map: "UQ__Usuario__AB6E61649003FDDD") @db.NVarChar(255)
  contrase_a String  @map("contrase√±a") @db.NVarChar(255)
  nombre     String  @db.NVarChar(100)
  apellido   String  @db.NVarChar(100)
  direccion  String? @db.NVarChar(255)
}
